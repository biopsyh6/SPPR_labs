@model WEB_253504_Kolesnikov.UI.Areas.Admin.Pages.Product.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" style="width:110px" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Data!.Items[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Data!.Items[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Data!.Items[0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Data!.Items[0].ImagePath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movie.Data!.Items)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                    <img src="@(Html.DisplayFor(modelItem => item.ImagePath))" style="max-height: 200px"/>
            </td>
            <td>
                    <a class="btn btn-primary" style="margin-bottom: 15px; width:110px" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary" style="margin-bottom: 15px; width:110px" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-primary" style="margin-bottom: 15px; width:110px" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <AdminPager current-page="@(Model.Movie.Data.CurrentPage)"
                total-pages="@(Model.Movie.Data.TotalPages)" />
</div>

